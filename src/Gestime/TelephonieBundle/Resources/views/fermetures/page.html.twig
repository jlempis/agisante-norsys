{% extends '::base.html.twig' %}

{% block titrePage %}<i class="icon-ban-circle"></i> Fermetures exceptionnelles{% endblock %}

{% block title %}{{ action }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block includesjs %}
  {{ parent() }}
{% endblock %}

{% block body %}

{% form_theme form 'GestimeCoreBundle:Form:form_date_time_picker.html.twig' %}

<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <div class="box-header">
        <span class="title"><i class="icon-user"></i>{{ action }}</span>
      </div>
      <div class="box-content">
        <form action="#" method="post" {{ form_enctype(form) }} class="form-horizontal fill-up validatable">
          <div class="padded">
            {% include 'GestimeTelephonieBundle:fermetures:templates/fieldsListe.html.twig'  %}
          </div>
        </form>

      </div>
    </div>
  </div>
</div>
{% include 'GestimeTelephonieBundle:fermetures:templates/datatable.html.twig'  %}
<script>
      GestimeDatePicker.initDatePicker();
      $(".sel2").select2();
      $('.Gestimetimepicker').timepicker({ 'step': 30, 'timeFormat': 'H:i' });
</script>
{% endblock %}
