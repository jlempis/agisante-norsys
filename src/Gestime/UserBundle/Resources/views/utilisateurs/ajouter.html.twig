{% extends '::base.html.twig' %}

{% block titrePage %}<i class="icon-user"></i> Utilisateurs{% endblock %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
  .progress{
    margin-bottom: 0px !important;
  }
  </style>
{% endblock %}

{% block includesjs %}
  {{ parent() }}
  <script src="{{ asset('bundles/gestimeuser/js/password-strength.js') }}"></script>
{% endblock %}

{% block body %}
    {% form_theme form with ['GestimeCoreBundle:Form:form_date_time_picker.html.twig'] %}

<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <div class="box-header">
        <span class="title"><i class="icon-user"></i> Nouvel utilisateur</span>
      </div>
      <div class="box-content">
        <form action="#" method="post" {{ form_enctype(form) }} class="form-horizontal fill-up validatable">
          <div class="padded">
            {% include 'GestimeUserBundle:utilisateurs:templates/fieldsListe.html.twig'  %}
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% include 'GestimeUserBundle:utilisateurs:templates/datatable.html.twig'  %}

<script>
  jQuery(document).ready(function () {
      GestimeDatePicker.initDatePicker();
      var options = {
          onKeyUp: function (evt) {
              $(evt.target).pwstrength("outputErrorList");
          }
      };
      $('#utilisateur_password').pwstrength(options);

      $('.icheck').iCheck({
        checkboxClass: 'icheckbox_flat-aero',
        radioClass: 'iradio_flat-aero'
      });
  });
</script>


{% endblock %}
