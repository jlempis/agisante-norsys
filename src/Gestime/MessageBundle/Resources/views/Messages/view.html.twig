  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/gestimemessage/css/messages.css') }}">
{% endblock %}

{% block includesjs %}
  {{ parent() }}
  <script src="{{ asset('bundles/gestimemessage/js/messages.js') }}"></script>
  <script src="{{ asset('bundles/gestimecore/js/jquery.printPage.js') }}"></script>


  <script type="text/javascript">
