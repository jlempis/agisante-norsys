{% extends '::base.html.twig' %}
{% block titrePage %}<i class="icon-bullhorn"></i> Consignes{% endblock %}

{% block title %}{{ action }}{% endblock %}
{% form_theme form with 'GestimeCoreBundle:Form:form_date_time_picker.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {{ form_stylesheet(form) }}
{% endblock %}

{% block includesjs %}
  {{ parent() }}
  {{ form_javascript(form) }}
  <script  src="{{ asset('bundles/gestimeagenda/js/consigne.js') }}" type="text/javascript"></script>

{% endblock %}

{% block body %}

{% if action == 'suppr' %}
  {% set validation = 'novalidate' %}
{% else %}
  {% set validation = '' %}
{% endif %}


<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <div class="box-header">
        <span class="title"><i class="icon-user"></i> {{ action }}</span>
      </div>
      <div class="box-content">
        <form action="#" method="post" {{ form_enctype(form) }} {{validation}} class="form-horizontal fill-up validatable">
          <div class="padded">
            {% include 'GestimeAgendaBundle:consignes:templates/fieldsListe.html.twig'  %}
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{% include 'GestimeAgendaBundle:consignes:templates/datatable.html.twig'  %}

{% endblock %}
